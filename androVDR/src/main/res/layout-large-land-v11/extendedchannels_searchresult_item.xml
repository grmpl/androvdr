<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator">
    <TextView
      android:id="@+id/csr_channelnumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:gravity="right"
      android:paddingTop="6dip"
      android:minWidth="30dip"
      android:textSize="20dip" />
    <LinearLayout
      android:id="@+id/csr_channellogoholder"
      android:layout_width="56dip"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="6dip">
      <ImageView
        android:id="@+id/csr_channellogo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    </LinearLayout>
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="48dip"
      android:padding="6dip">
      <TextView
        android:id="@+id/csr_channeltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <TextView
        android:id="@+id/csr_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/csr_channeltext"
        android:gravity="right" />
      <TextView
        android:id="@+id/csr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/csr_time"
        android:textSize="20dip" />
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>