<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="?body"
  android:id="@+id/tab2"
  android:tag="@string/remote_play"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableRow>
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_media_rc1"
        android:tag="Activity.de.androvdr.activities.RecordingsActivity" />
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_menu_linie_s"
        android:tag="VDR.ok" />
    </TableRow>
  </TableLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dip" />
  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableRow>
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_media_pause"
        android:tag="VDR.pause" />
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_menu_play_clip"
        android:tag="VDR.play" />
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_menu_play_stop"
        android:tag="VDR.stop" />
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_menu_rec"
        android:tag="VDR.record" />
    </TableRow>
  </TableLayout>
  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableRow>
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_media_rew"
        android:tag="VDR.green" />
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_media_rev"
        android:tag="VDR.fastrew" />
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_media_play"
        android:tag="VDR.fastfwd" />
      <ImageButton
        style="?buttonLarge"
        android:src="@drawable/ic_media_ff"
        android:tag="VDR.yellow" />
    </TableRow>
  </TableLayout>
</LinearLayout>